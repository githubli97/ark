{
  "properties": [
    {
      "name": "ark.datasource.driver-class-name",
      "type": "java.lang.String",
      "description": "mysql数据库连接驱动"
    },
    {
      "name": "ark.datasource.url",
      "type": "java.lang.String",
      "description": "数据库的JDBC连接地址"
    },
    {
      "name": "ark.datasource.username",
      "type": "java.lang.String",
      "description": "用户名"
    },
    {
      "name": "ark.datasource.password",
      "type": "java.lang.String",
      "description": "密码"
    },
    {
      "name": "ark.datasource.druid.initial-size",
      "type": "java.lang.Integer",
      "description": "初始化连接数",
      "defaultValue": 5
    },
    {
      "name": "ark.datasource.druid.min-idle",
      "type": "java.lang.Integer",
      "description": "最小维持连接数",
      "defalutValue": 10
    },
    {
      "name": "ark.datasource.druid.max-active",
      "type": "java.lang.Integer",
      "description": "最大连接数",
      "defalutValue": 50
    },
    {
      "name": "ark.datasource.druid.max-wait",
      "type": "java.lang.String",
      "description": "最长等待时间",
      "defalutValue": 60000
    },
    {
      "name": "ark.datasource.druid.time-between-eviction-runs-millis",
      "type": "java.lang.String",
      "description": "关闭空闲连接间隔（毫秒）",
      "defalutValue": 6000
    },
    {
      "name": "ark.datasource.druid.min-evictable-idle-time-millis",
      "type": "java.lang.String",
      "description": "连接最小的生存时间",
      "defaultValue": 30000
    },
    {
      "name": "ark.datasource.druid.validation-query",
      "type": "java.lang.String",
      "description": "验证查询",
      "defaultValue": "SELECT 1 FROM dual"
    },
    {
      "name": "ark.datasource.druid.test-while-idle",
      "type": "java.lang.String",
      "description": "测试空闲连接是否可用",
      "defaultValue": true
    },
    {
      "name": "ark.datasource.druid.test-on-borrow",
      "type": "java.lang.Boolean",
      "description": "测试后返回连接",
      "defaultValue": false
    },
    {
      "name": "ark.datasource.druid.test-on-return",
      "type": "java.lang.Boolean",
      "description": "测试后归还",
      "defaultValue": false
    },
    {
      "name": "ark.datasource.druid.pool-prepared-statements",
      "type": "java.lang.Boolean",
      "description": "是否缓存PSTMT",
      "defaultValue": false
    },
    {
      "name": "ark.datasource.druid.max-pool-prepared-statement-per-connection-size",
      "type": "java.lang.Integer",
      "description": "配置PSTMT缓存个数",
      "defaultValue": 20
    }
  ]
}
